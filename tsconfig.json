{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2018",
    "module": "ESNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": false,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error"
  },
  "include": ["src", "test"]
}
